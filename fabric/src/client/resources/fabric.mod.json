{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "Blocks Input Methods when you're not using it.\\n在你不打字的时候自动关闭输入法",
  "authors": [
    "${author}"
  ],
  "contributors": [
  ],
  "contact": {
    "email": "${email}",
    "homepage": "${mod_url}",
    "issues": "${issues_url}",
    "sources": "${mod_url}"
  },
  "license": "${license}",
  "icon": "${mod_logo}",
  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.reserveword.imblocker.IMBlockerFabric"
    ],
    "modmenu": [
      "io.github.reserveword.imblocker.FabricConfig"
    ]
  },
  "mixins": [
    "imblocker.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": "*",
    "minecraft": "~1.20.2",
    "java": ">=17"
  },
  "suggests": {
    "modmenu": "8.0.0",
    "cloth-config": "*"
  }
}
